@model DashboardModel
@{
    ViewBag.Title = "Dashboard";
}
@Html.ActionLink("Debug", "Index", "Debug")

<div class="card mt-3">
    <div class="row no-gutters">
        <div class="col-md-3">
            <div class="card-body">
                <h5>Application</h5>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card-body">
                @Html.ActionLink("Designs", "Index", "Design", null, new { @class = "card-link" })
                @Html.ActionLink("Projects", "Index", "Project", null, new { @class = "card-link" })
                @Html.ActionLink("Orders", "Index", "Order", null, new { @class = "card-link" })
            </div>
        </div>
    </div>
</div>
<div class="row mt-3">
    <div class="col-3">
        <div class="card">
            <div class="card-body">
                Application
            </div>
        </div>
    </div>
    <div class="col-9">
        @Html.ActionLink("Designs", "Index", "Design", htmlAttributes: new { @class = "align-middle" })
        @Html.ActionLink("Projects", "Index", "Project")
        @Html.ActionLink("Orders", "Index", "Order")
    </div>
</div>
<h3>User Content</h3>
<div class="row row-cols-1 row-cols-md-4">
    <div class="col mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Html.ActionLink("Designs", "Index", "Design")</h5>
                <p class="card-text">
                    <dl>
                        <dt>Total Designs</dt>
                        <dd>@Model.ADashboard_Summary.MDesign_Dashboard.TotalDesigns</dd>
                    </dl>
                </p>
            </div>
        </div>
    </div>
    <div class="col mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Html.ActionLink("Projects", "Index", "Project")</h5>
                <p class="card-text">
                    <dl>
                        <dt>Total Projects</dt>
                        <dd>@Model.ADashboard_Summary.MProject_Dashboard.TotalProjects</dd>
                    </dl>
                </p>
            </div>
        </div>
    </div>
</div>
