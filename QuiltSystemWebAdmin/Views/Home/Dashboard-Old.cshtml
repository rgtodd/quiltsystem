<h3>Accounting</h3>
<div class="row row-cols-1">
    <div class="col mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Html.ActionLink("Ledger", "Index", "Ledger")</h5>
                <table class="card-text">
                    <tbody>
                        @foreach (var dashboardItem in Model.ADashboard_Summary.MLedger_Dashboard.DashboardItems)
                        {
                            <tr>
                                <td>@dashboardItem.AccountCode - @dashboardItem.AccountDescription</td>
                                <td>@dashboardItem.DebitCreditCode</td>
                                <td>@dashboardItem.Amount</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
