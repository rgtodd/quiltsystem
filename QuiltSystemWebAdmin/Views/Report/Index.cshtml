@model ReportModel
@{
    ViewBag.Title = "Reports";
}
@using (Html.BeginForm("Index", "Report", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Filter, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.Filter, Model.Filters, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="offset-sm-2 col-sm-10">
            <input type="submit" name="action~refresh" value="Refresh" class="btn btn-primary" />
        </div>
    </div>

    @Html.Raw(Model.HtmlTable)
}
