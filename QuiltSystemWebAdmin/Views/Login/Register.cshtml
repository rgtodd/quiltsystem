@model LoginRegisterViewModel
@{
    ViewBag.Title = "Register";
}
@Html.BootstrapValidationSummary()
<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("Register", "Login", FormMethod.Post, new { id = "frmMain", @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required", maxlength = "256", email = "email" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required", minlength = "4", maxlength = "20" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-9">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", required = "required", minlength = "4", maxlength = "20" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">By clicking Register, you agree to the Quilt - A - GoGo @Html.ActionLink("Terms of Use", "Index", "TermsOfUse") and @Html.ActionLink("Privacy Policy", "Index", "PrivacyPolicy").</div>
            </div>
            <div class="form-group">
                <div class="offset-md-3 col-sm-9">
                    <input type="submit" class="btn btn-primary" value="Register" />
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        }
    </div>
</div>