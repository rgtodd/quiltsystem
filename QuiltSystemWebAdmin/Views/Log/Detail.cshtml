@model LogEntryDetailModel
@{
    ViewBag.Title = "Log";
}
@using (Html.ListBeginForm("DetailSubmit", "PayPal", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="row">
        @Html.BootstrapListActionLink("Return", "Index")
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LogEntry.LogEntryId, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            <p class="form-control-static">
                @Html.DisplayFor(m => m.LogEntry.LogEntryId)
            </p>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LogEntry.LogEntryDateTime, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            <p class="form-control-static">
                @Html.DisplayFor(m => m.LogEntry.LogEntryDateTime)
            </p>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LogEntry.Message, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
<pre class="form-control-static">@Html.DisplayFor(m => m.LogEntry.Message)</pre>
        </div>
    </div>
    @Html.HiddenFor(m => m.LogEntry.LogEntryId)
}