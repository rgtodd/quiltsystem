@model ProfileChangePasswordModel
@{
    ViewBag.Title = "Change Password";
}
<div class="header">
    <h5 class="header__title font-weight-bold">
        @ViewBag.Title
    </h5>
</div>
@Html.BootstrapValidationSummary()
@using (Html.BeginForm("ChangePassword", "Profile", FormMethod.Post, new { id = "frmMain", novalidate = "novalidate" }))
{
    using (Html.BootstrapBeginForm().ForInput())
    {
        @Html.BootstrapInput(m => m.OldPassword)
        @Html.BootstrapInput(m => m.NewPassword)
        @Html.BootstrapInput(m => m.ConfirmPassword)
        using (Html.BootstrapBeginFormButtonRow())
        {
            @Html.BootstrapSubmitButton("Update", Actions.Update)
            @Html.BootstrapActionLink("Cancel", "Index", "Profile")
        }
    }
}