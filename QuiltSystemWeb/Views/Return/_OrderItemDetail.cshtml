@model ReturnRequestViewItemModel
<div class="row site-margin-top">
    <div class="col-sm-3">
        <div class="row">
            <div class="col-sm-12">
                <label>@Html.DisplayFor(m => m.OrderItem.Description) (@Html.DisplayFor(m => m.OrderItem.Sku))</label>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <img src="@Url.ActionLink("KitSnapshot", "Thumbnail", new { id = Model.OrderItem.OrderableReference, size = 75 })" />
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="row">
            <div class="col-sm-12">@Html.LabelFor(m => m.OrderItem.UnitPrice)</div>
        </div>
        <div class="row">
            <div class="col-sm-12">@Html.DisplayFor(m => m.OrderItem.UnitPrice)</div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="row">
            <div class="col-sm-12">@Html.LabelFor(m => m.OrderItem.Quantity)</div>
        </div>
        <div class="row">
            <div class="col-sm-12">@Html.DisplayFor(m => m.OrderItem.Quantity)</div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="row">
            <div class="col-sm-12">@Html.LabelFor(m => m.Quantity)</div>
        </div>
        <div class="row">
            <div class="col-sm-12">@Html.DisplayFor(m => m.Quantity)</div>
        </div>
    </div>
</div>
@Html.HiddenFor(m => m.OrderReturnRequestItemId)
@Html.HiddenFor(m => m.OrderItem.OrderItemId)

